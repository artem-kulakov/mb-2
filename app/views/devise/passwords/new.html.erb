<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "js-validate form-signin p-5" }) do |f| %>
  <!-- Logo -->
  <div class="text-center">
    <%= link_to root_path do %>
      <img class="mb-3" src="../../assets/svg/logos/logo-short.svg" alt="Logo" width="60" height="60">
    <% end %>
  </div>
  <!-- End Logo -->

  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Title -->
  <div class="text-center mb-4">
    <h1 class="h3 mb-0">Recover account</h1>
    <p>Enter your email address and an email with instructions will be sent to you.</p>
  </div>
  <!-- End Title -->

  <!-- Input -->
  <div class="js-form-message mb-3">
    <div class="js-focus-state input-group form">
      <div class="input-group-prepend form__prepend">
        <span class="input-group-text form__text">
          <i class="fa fa-user form__text-inner"></i>
        </span>
      </div>
      <%= f.email_field :email, class: "form-control form__input", required: true, placeholder: "Email", 'aria-label': "Email", 'data-msg': "Please enter a valid email address.", 'data-error-class': "u-has-error", 'data-success-class': "u-has-success" %>
    </div>
  </div>
  <!-- End Input -->

  <div class="mb-3">
    <%= f.submit "Recover Account", class: "btn btn-block btn-primary" %>
  </div>

  <div class="text-center mb-3">
    <p class="text-muted">Have an account? <%= link_to 'Signin', new_user_session_path %></p>
  </div>
<% end %>
