<!-- Recent Posts -->
<div class="mb-7">
  <h3 class="h5 mb-3">Recent posts</h3>

  <div class="border rounded p-4">
    <!-- Recent Posts List -->
    <ul class="list-unstyled">
      <% @recent_posts.each_with_index do |post, index| %>
        <li class="py-1">
          <%= link_to post.title, post, class: "text-secondary" %>
        </li>
        <% unless index == @recent_posts.length - 1 %>
          <li class="dropdown-divider"></li>
        <% end %>
      <% end %>
    </ul>
    <!-- End Recent Posts List -->
  </div>
</div>
<!-- End Recent Posts -->
